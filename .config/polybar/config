[colors]
background = #2e3440
background-alt = #88c0d0
foreground = #eceff4
bright = #eceff4

[bar/main]
monitor = ${env:MONITOR:}
override-redirect = false 
wm-restack = bspwm
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true
width = 100%
height = 24
radius = 0.0
line-size = 0
offset-y = 0
offset-x = 0
font-0 = firacode:style=normal:pixelsize=12;3
font-1 = typicons:style=normal:pixelsize=13;3

modules-center = bspwm
modules-right = minecraft pulseaudio weather time
#modules-left = spotify

[module/bspwm]
type = internal/bspwm
index-sort = true
enable-click = true
format = <label-state>
format-prefix-padding = 2
#pin-workspaces = true
label-empty-foreground = #4c566a
label-focused-foreground = ${colors.bright}
label-focused-background = ${colors.background-alt} 
label-focused = %name%
label-focused-padding = 2
label-occupied = %name%
label-occupied-padding = 2
label-occupied-foreground = ${colors.bright}
label-empty = %name%
label-empty-padding = 2

[settings]
label-focused-underline= ${colors.foreground}
throttle-output = 5
throttle-output-for = 10
screenchange-reload = true
pseudo-transparency = false

[module/time]
type = internal/date
time = %I:%M %p | %m/%d/%y
format = <label>
format-prefix = 
format-prefix-padding = 1
format-padding = 1
format-foreground = #5e81ac
label = %time%
label-foreground = ${colors.bright}

[module/pulseaudio]
